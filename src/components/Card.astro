---
import { slugifyStr } from "@/utils/slugify";
import type { CollectionEntry } from "astro:content";
import { getPath } from "@/utils/getPath";
import Datetime from "./Datetime.astro";

export interface Props {
  href?: string;
  frontmatter?: CollectionEntry<"blog">["data"];
  secHeading?: boolean;
  // Allow passing CollectionEntry properties directly
  data?: CollectionEntry<"blog">["data"];
  id?: string;
  filePath?: string;
  variant?: "h2" | "h3";
}

const { href, frontmatter, data, id, filePath, variant = "h2" } = Astro.props;

// Determine content data source (frontmatter prop or data prop from CollectionEntry)
const content = frontmatter || data;

// Handle potentially undefined content
const title = content?.title || '';
const description = content?.description || '';
const pubDatetime = content?.pubDatetime;
const modDatetime = content?.modDatetime;

const headerProps = {
  style: { viewTransitionName: slugifyStr(title) },
  class: "text-lg font-medium decoration-dashed hover:underline",
};
---

<li class="my-6">
  <a
    href={href || (id ? getPath(id, filePath) : '#')}
    class="inline-block text-lg font-medium text-accent decoration-dashed underline-offset-4 focus-visible:no-underline focus-visible:underline-offset-0"
  >
    {
      variant === "h2" ? (
        <h2 {...headerProps}>{title}</h2>
      ) : (
        <h3 {...headerProps}>{title}</h3>
      )
    }
  </a>
  {pubDatetime && <Datetime pubDatetime={pubDatetime} modDatetime={modDatetime} timezone={undefined} />}
  <p>{description}</p>
</li>
